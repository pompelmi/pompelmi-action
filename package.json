{
  "name": "pompelmi-action",
  "version": "1.0.0",
  "description": "GitHub Action for malware scanning using pompelmi",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build lib/index.js -o dist --source-map --license licenses.txt",
    "clean": "rm -rf lib dist",
    "rebuild": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pompelmi/pompelmi-action.git"
  },
  "keywords": [
    "github-actions",
    "malware",
    "security",
    "scanning",
    "pompelmi"
  ],
  "author": "Pompelmi",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1"
  },
  "optionalDependencies": {
    "pompelmi": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vercel/ncc": "^0.38.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20"
  }
}
